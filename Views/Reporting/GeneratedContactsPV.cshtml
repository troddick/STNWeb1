<body>
<div id="header">
    <div id="headerLogo">
        <div id="usgsLogoDiv">
            <img id="usgsLogo" title="USGS Links" src="@Url.Content("~/Assets/Images/logos/USGS.jpg")" alt="USGS Logo" />
        </div>
    </div>
