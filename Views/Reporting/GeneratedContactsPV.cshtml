</div>

<br clear="all" />

@{
    if (ViewData.ContainsKey("ReportList"))
    {
        List<ReportingModel> ReportList = ViewData["ReportList"] as List<ReportingModel>;
        EVENT thisEvent = ViewData["Event"] as EVENT;
        ReportMember thisReportCoord = ViewData["EventCoord"] as ReportMember;
        
        <div style="margin-top:5em">
            <div style="font-size: x-large; font-family: 'BryantBold'">USGS @(thisEvent.EVENT_NAME) Contacts Report for @(((DateTime)ReportList[0].aReport.REPORT_DATE).ToShortDateString())</div> 
            <br />
            <table>
                <tr><td>Event Description:</td><td>@(thisEvent.EVENT_DESCRIPTION)</td></tr>
                <tr><td>Event Type:</td><td>@(ViewData["EventType"])</td></tr>
                <tr><td>Event Status:</td><td>@(ViewData["EventStatus"])</td></tr>
                <tr><td>Event Coordinator:</td><td>@(thisReportCoord.MemberName), @(thisReportCoord.OfficeName), @(thisReportCoord.Email)</td></tr>
            </table>
        </div>

    @********************* Contacts section of the report ****************************@
    
        
        <br />
        <table class="Generated-table" style="float:left;border-right:none">
            <tr>  <td style="height:31px"></td></tr>
            <tr>  <td style="text-align:left;font-family:'BryantBold';font-size:12px;border-bottom: 1px solid #EEEEEE">Submitter</td></tr>
            <tr>  <td style="padding-left:2em;text-align:left;border-bottom: 1px solid #EEEEEE">Name</td></tr>
            <tr>  <td style="padding-left:2em;text-align:left;border-bottom: 1px solid #EEEEEE">Phone</td></tr>
            <tr>  <td style="padding-left:2em;text-align:left;border-bottom: 1px solid #EEEEEE">Email</td></tr>
            <tr>  <td style="padding-left:2em;text-align:left;border-bottom: 1px solid #EEEEEE">Office Name</td></tr>
            <tr>  <td style="padding-left:2em;text-align:left;padding-top:6px;padding-bottom:5px">Office Address</td></tr>
            <tr style="background-color:#F8F8F8">  <td style="text-align:left;font-family:'BryantBold';font-size:12px;border-bottom: 1px solid #EEEEEE">Deployer</td></tr>
            <tr style="background-color:#F8F8F8">  <td style="padding-left:2em;text-align:left;border-bottom: 1px solid #EEEEEE">Name</td></tr>
            <tr style="background-color:#F8F8F8">  <td style="padding-left:2em;text-align:left;border-bottom: 1px solid #EEEEEE">Phone</td></tr>
            <tr style="background-color:#F8F8F8">  <td style="padding-left:2em;text-align:left;border-bottom: 1px solid #EEEEEE">Alt Phone</td></tr>
            <tr style="background-color:#F8F8F8">  <td style="padding-left:2em;text-align:left">Email</td></tr>
            <tr>  <td style="text-align:left;font-family:'BryantBold';font-size:12px;border-bottom: 1px solid #EEEEEE">General</td></tr>
            <tr>  <td style="padding-left:2em;text-align:left;border-bottom: 1px solid #EEEEEE">Name</td></tr>
            <tr>  <td style="padding-left:2em;text-align:left;border-bottom: 1px solid #EEEEEE">Phone</td></tr>
            <tr>  <td style="padding-left:2em;text-align:left;border-bottom: 1px solid #EEEEEE">Alt Phone</td></tr>
            <tr>  <td style="padding-left:2em;text-align:left">Email</td></tr>
            <tr style="background-color:#F8F8F8">  <td style="text-align:left;font-family:'BryantBold';font-size:12px;border-bottom: 1px solid #EEEEEE">Inland Flood</td></tr>
            <tr style="background-color:#F8F8F8">  <td style="padding-left:2em;text-align:left;border-bottom: 1px solid #EEEEEE">Name</td></tr>
            <tr style="background-color:#F8F8F8">  <td style="padding-left:2em;text-align:left;border-bottom: 1px solid #EEEEEE">Phone</td></tr>
            <tr style="background-color:#F8F8F8">  <td style="padding-left:2em;text-align:left;border-bottom: 1px solid #EEEEEE">Alt Phone</td></tr>
            <tr style="background-color:#F8F8F8">  <td style="padding-left:2em;text-align:left">Email</td></tr>
            <tr>  <td style="text-align:left;font-family:'BryantBold';font-size:12px;border-bottom: 1px solid #EEEEEE">Coastal Flood</td></tr>
            <tr>  <td style="padding-left:2em;text-align:left;border-bottom: 1px solid #EEEEEE">Name</td></tr>
            <tr>  <td style="padding-left:2em;text-align:left;border-bottom: 1px solid #EEEEEE">Phone</td></tr>
            <tr>  <td style="padding-left:2em;text-align:left;border-bottom: 1px solid #EEEEEE">Alt Phone</td></tr>
            <tr>  <td style="padding-left:2em;text-align:left">Email</td></tr>
            <tr style="background-color:#F8F8F8">  <td style="text-align:left;font-family:'BryantBold';font-size:12px;border-bottom: 1px solid #EEEEEE">Water Quality</td></tr>
            <tr style="background-color:#F8F8F8">  <td style="padding-left:2em;text-align:left;border-bottom: 1px solid #EEEEEE">Name</td></tr>
            <tr style="background-color:#F8F8F8">  <td style="padding-left:2em;text-align:left;border-bottom: 1px solid #EEEEEE">Phone</td></tr>
            <tr style="background-color:#F8F8F8">  <td style="padding-left:2em;text-align:left;border-bottom: 1px solid #EEEEEE">Alt Phone</td></tr>
            <tr style="background-color:#F8F8F8">  <td style="padding-left:2em;text-align:left">Email</td></tr>
        </table>

        
        foreach (ReportingModel rm in ReportList)
        {
            <table class="Generated-table" style="float:left; margin-left:-2px">
                <tr>  <td style="font-family:'BryantBold'; border:none; height:31px;font-size:12px">@(rm.aReport.STATE)</td></tr>
                <tr>  <td style="border-bottom: 1px solid #EEEEEE"></td></tr>
                <tr>  <td style="border-bottom: 1px solid #EEEEEE">@(rm.submitter.MemberName)</td></tr>
                <tr>  <td style="border-bottom: 1px solid #EEEEEE">@(rm.submitter.Phone)</td></tr>
                <tr>  <td style="border-bottom: 1px solid #EEEEEE">@(rm.submitter.Email)</td></tr>
                <tr>  <td style="border-bottom: 1px solid #EEEEEE">@(rm.submitter.OfficeName)</td></tr>
                <tr style="height:29px">  <td>@(rm.submitter.OfficeAddress1)<br />@(rm.submitter.OfficeAddress2)</td></tr>
                <tr style="background-color:#F8F8F8">  <td style="border-bottom: 1px solid #EEEEEE"></td></tr>
                <tr style="background-color:#F8F8F8">  <td style="border-bottom: 1px solid #EEEEEE">@(rm.DeplContact != null ? rm.DeplContact.FNAME + " " + rm.DeplContact.LNAME : "")</td></tr>
                <tr style="background-color:#F8F8F8">  <td style="border-bottom: 1px solid #EEEEEE">@(rm.DeplContact != null ? rm.DeplContact.PHONE : "")</td></tr>
                <tr style="background-color:#F8F8F8">  <td style="border-bottom: 1px solid #EEEEEE">@(rm.DeplContact != null ? rm.DeplContact.ALT_PHONE : "")</td></tr>
                <tr style="background-color:#F8F8F8">  <td>@(rm.DeplContact != null ? rm.DeplContact.EMAIL : "")</td></tr>
                <tr>  <td style="border-bottom: 1px solid #EEEEEE"></td></tr>
                <tr>  <td style="border-bottom: 1px solid #EEEEEE">@(rm.GenContact != null ? rm.GenContact.FNAME + " " + rm.GenContact.LNAME : "")</td></tr>
                <tr>  <td style="border-bottom: 1px solid #EEEEEE">@(rm.GenContact != null ? rm.GenContact.PHONE : "")</td></tr>
                <tr>  <td style="border-bottom: 1px solid #EEEEEE">@(rm.GenContact != null ? rm.GenContact.ALT_PHONE : "")</td></tr>
                <tr>  <td>@(rm.GenContact != null ? rm.GenContact.EMAIL : "")</td></tr>
                <tr style="background-color:#F8F8F8">  <td style="border-bottom: 1px solid #EEEEEE"></td></tr>
                <tr style="background-color:#F8F8F8">  <td style="border-bottom: 1px solid #EEEEEE">@(rm.InlandContact != null ? rm.InlandContact.FNAME + " " + rm.InlandContact.LNAME: "")</td></tr>
                <tr style="background-color:#F8F8F8">  <td style="border-bottom: 1px solid #EEEEEE">@(rm.InlandContact != null ? rm.InlandContact.PHONE : "")</td></tr>
                <tr style="background-color:#F8F8F8">  <td style="border-bottom: 1px solid #EEEEEE">@(rm.InlandContact != null ? rm.InlandContact.ALT_PHONE : "")</td></tr>
                <tr style="background-color:#F8F8F8">  <td>@(rm.InlandContact != null ? rm.InlandContact.EMAIL : "")</td></tr>
                <tr>  <td style="border-bottom: 1px solid #EEEEEE"></td></tr>
                <tr>  <td style="border-bottom: 1px solid #EEEEEE">@(rm.CoastContact != null ? rm.CoastContact.FNAME + " " + rm.CoastContact.LNAME: "")</td></tr>
                <tr>  <td style="border-bottom: 1px solid #EEEEEE">@(rm.CoastContact != null ? rm.CoastContact.PHONE : "")</td></tr>
                <tr>  <td style="border-bottom: 1px solid #EEEEEE">@(rm.CoastContact != null ? rm.CoastContact.ALT_PHONE : "")</td></tr>
                <tr>  <td>@(rm.CoastContact != null ? rm.CoastContact.EMAIL : "")</td></tr>
                <tr style="background-color:#F8F8F8">  <td style="border-bottom: 1px solid #EEEEEE"></td></tr>
                <tr style="background-color:#F8F8F8">  <td style="border-bottom: 1px solid #EEEEEE">@(rm.WaterContact != null ? rm.WaterContact.FNAME + " " + rm.WaterContact.LNAME: "")</td></tr>
                <tr style="background-color:#F8F8F8">  <td style="border-bottom: 1px solid #EEEEEE">@(rm.WaterContact != null ? rm.WaterContact.PHONE : "")</td></tr>
                <tr style="background-color:#F8F8F8">  <td style="border-bottom: 1px solid #EEEEEE">@(rm.WaterContact != null ? rm.WaterContact.ALT_PHONE : "")</td></tr>
                <tr style="background-color:#F8F8F8">  <td>@(rm.WaterContact != null ? rm.WaterContact.EMAIL : "")</td></tr>
                
            </table>
        }
    }
    else
    {
        <div style="margin-top:6em;font-size:large">There are no Contacts that match these parameters.</div>
    }
    
}
<br clear="all" />


